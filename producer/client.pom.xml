<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>dubbo-demo</artifactId>
		<groupId>priv.chenkai</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<artifactId>producer</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>priv/chenkai/producer/client/**</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<configuration>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<includes>
						<include>priv/chenkai/producer/client/**</include>
					</includes>
					<encoding>utf-8</encoding>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<distributionManagement>
		<repository>
			<id>rfchina-nexus</id>
			<name>maven-releases</name>
			<url>http://repo.maven.rfchina.com:8081/repository/maven-releases</url>
		</repository>
		<snapshotRepository>
			<id>rfchina-nexus</id>
			<name>maven-snapshots</name>
			<url>http://repo.maven.rfchina.com:8081/repository/maven-snapshots</url>
		</snapshotRepository>
	</distributionManagement>
</project>

